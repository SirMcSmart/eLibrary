@model List<eLibraryPortal.Data.Models.BookSuggestion>
@{
    ViewData["Title"] = "BookSuggestionList";
    Layout = "~/Views/Admin/_Layout.cshtml";
}



<div id="main-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <br /><br /><br /><br />
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="page-title"> <b>Book Suggestion List</b></h1>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        @if (Model != null && Model.Count() > 0)
                        {
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Book Name</th>
                                        <th>Book Author</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Suggestion Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>*</td>
                                            <td>@Html.DisplayFor(modelItem => item.BookName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.BookAuthor)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SuggestionDate)</td>                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p>No records found</p>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>

    </div>
    <br /><br /><br /><br />


</div>

