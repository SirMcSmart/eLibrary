@model eLibraryPortal.Data.Models.Users
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="container">
    <div class="container-fluid">
        <br /><br /><br /><br />
        <div class="row">
            <div class="col-xl-10 col-md-10 ">
                <div class="card">
                    <div class="card-header text-center text-white" style="background-color: #308bedc2;">
                        <h2 class="card-title"> Edit User</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="PostEditUser" asp-controller="Admin" method="post" enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <br />
                            
                            <input type="hidden" asp-for="Id" name="Id" />

                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="Title" name="Title" placeholder="Enter Title" required>
                                    </div>
                                </div>
                                <div class="offset-1 col-md-4">
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="FirstName" name="FirstName" placeholder="Enter FirstName" required>
                                    </div>
                                </div>
                                <div class="offset-1 col-md-4">
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="LastName" name="LastName" placeholder="Enter LastName" required>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <input type="email" class="form-control" asp-for="Email" name="Email" placeholder="Enter Email" required>
                                    </div>
                                </div>
                                <div class="offset-2 col-md-5">
                                    <div class="form-group">
                                        <input type="number" class="form-control" asp-for="PhoneNumber" name="PhoneNumber" placeholder="Enter Phone Number" required>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <select class="form-control" asp-for="Gender" name="Gender" required>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="offset-2 col-md-5">
                                    <div class="form-group">
                                        <select class="form-control" asp-for="UserRole" name="UserRole" required>
                                            <option value="Admin">Admin</option>
                                            <option value="Student">Student</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <input type="file" class="form-control" name="ProfileImage">
                                        <p> <small>Upload Profile Image.</small></p>
                                    </div>
                                </div>
                                <div class="offset-2 col-md-5">
                                    <div class="form-group">
                                        <input type="date" class="form-control" asp-for="DateOfBirth" name="DateOfBirth" max="" required>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="Address" name="Address" placeholder="Enter Address" required>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col text-center">
                                    <div class="offset-4 col-md-4">
                                        <button type="submit" class="form-control btn btn-primary">Update User</button>
                                    </div>

                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <br /><br /><br /><br />
</div>


