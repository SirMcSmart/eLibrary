
@model eLibraryPortal.Data.Models.BookSuggestion
@{
    ViewData["Title"] = "Book Suggestion";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="container">
    <div class="container-fluid">
        <br /><br /><br /><br />
        <div class="row">
            <div class="col-xl-10 col-md-10 ">
                <div class="card">
                    <div class="card-header text-center">
                        <h2 class="card-title">Book Suggestion </h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="PostBookSuggestion" asp-controller="User" method="post" enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="BookName">Book Name:</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" name="BookName" placeholder="Enter Book Name" required>
                                </div>
                            </div>

                           
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="BookAuthor">Book Author:</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" name="BookAuthor" placeholder="Enter Book Author" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-5">
                                    <button type="submit" class="form-control btn btn-primary">Suggest</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <br /><br /><br /><br />
</div>

